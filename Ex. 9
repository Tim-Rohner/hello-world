
import random

a = random.randint(1,9)

guess = 0
count = 0

while guess != a:

    guess = input("I chose a number between 1 and 9, which one is it? ")

    if guess == "exit":
        break

    guess = int(guess)
    count += 1

    if guess == a:
        print("You are correct, this is the number I chose. Tries: " + str(count))
    elif guess > a:
        print("You guessed too high.")
    elif guess < a:
        print("You guessed too low.")
