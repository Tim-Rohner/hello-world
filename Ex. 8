answer = str(input("Would you like to play a new game? "))

while answer == "yes":

    one = str(input("Player one, please choose rock, paper or scissors: "))
    two = str(input("Player two, please choose rock, paper or scissors: "))

    if one == "rock" and two == "scissors":
        print("Player one wins!")
    elif one == "rock" and two == "paper":
        print("Player two wins!")
    elif one == "scissors" and two == "rock":
        print("Player two wins!")
    elif one == "scissors" and two == "paper":
        print("Player one wins!")
    elif one == "paper" and two == "rock":
        print("Player one wins!")
    elif one == "paper" and two == "scissors":
        print("Player two wins!")
    elif one == two:
        print("It's a tie!")


    answer = str(input("Would you like to play a new game? "))
